@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var list = Model.People;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="text-center row col-4 offset-4">
    @if(list.Any())
    {
        <ul class="list-group col-12 p-0 pb-4">
            <li class="list-group-item list-group-item-primary">
                <div class="row text-center">
                    <div class="col-2">
                        Nr
                    </div>
                    <div class="col-5">
                        Name
                    </div>
                    <div class="col-5">
                        Last Name
                    </div>
                </div>
            </li>
            @for (int i = 0; i < list.Count; i++)
            {
                <li class="list-group-item">
                    <div class="row text-center">
                        <div class="col-2">
                            @(i + 1)
                        </div>
                        <div class="col-5 border-start">
                            @list[i].FirstName
                        </div>
                        <div class="col-5 border-start">
                            @list[i].LastName
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    <form method="post">
        <div class="row">
            <div class="form-group p-0">
                <input type="text" class="form-control" placeholder="First Name" asp-for="PersonForm.FirstName" />
            </div>

            <div class="form-group p-0 pt-1">
                <input type="text" class="form-control" placeholder="Last Name" asp-for="PersonForm.LastName" />
            </div>
        </div>
        <div class="row form-group pt-1">
            <input type="submit" class="col-12 btn btn-primary" value="Wyslij" />
        </div>
    </form>
</div>